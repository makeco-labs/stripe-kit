{
  "name": "@makeco/db-cli",
  "version": "0.1.1",
  "author": "paulwongx",
  "repository": {
    "type": "git",
    "url": "https://github.com/makeco-labs/db-cli.git"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "db-cli": "./dist/cli/main.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "build": "bun clean && tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json --resolve-full-paths",
    "dev": "tsc -p tsconfig.build.json --watch",
    "dev:typecheck": "bun typecheck --watch --preserveWatchOutput",
    "lint": "bunx ultracite@latest lint",
    "format": "bunx ultracite@latest format",
    "test": "vitest",
    "ci": "bun run lint && bun run typecheck && bun run build && bun run test --run",
    "git": "bun run ci && git add . && git commit -m",
    "postgit": "git push --all",
    "release": "bun run ci && bun ../../scripts/release.ts",
    "release:minor": "bun run ci && bun ../../scripts/release.ts minor",
    "release:patch": "bun run ci && bun ../../scripts/release.ts patch",
    "release:dev": "bun run ci && bun ../../scripts/release.ts prerelease"
  },
  "bugs": {
    "url": "https://github.com/makeco-labs/db-cli/issues"
  },
  "description": "A powerful database CLI tool that extends drizzle-kit with additional commands for database management workflows",
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "homepage": "https://github.com/makeco-labs/db-cli",
  "keywords": [
    "database",
    "cli",
    "drizzle",
    "drizzle-kit",
    "migrations",
    "schema",
    "reset",
    "seed",
    "typescript"
  ],
  "license": "MIT",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@aws-sdk/client-rds-data": "^3.556.0",
    "@cloudflare/workers-types": "^4.20230518.0",
    "@electric-sql/pglite": "^0.2.12",
    "@libsql/client": "^0.15.10",
    "@neondatabase/serverless": "^0.9.1",
    "@planetscale/database": "^1.16.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.0.0",
    "@types/node-fetch": "^2.6.11",
    "@types/pg": "^8.10.7",
    "@types/prompts": "^2.4.9",
    "@types/ws": "^8.5.10",
    "@vercel/postgres": "^0.8.0",
    "better-sqlite3": "^11.9.1",
    "bun-types": "^0.6.6",
    "drizzle-kit": "^0.30.6",
    "gel": "^2.0.0",
    "mysql2": "3.14.1",
    "pg": "^8.11.5",
    "postgres": "^3.4.4",
    "@biomejs/biome": "^2.1.2",
    "ultracite": "latest",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^3.2.4",
    "zod": "^4.0.14"
  },
  "dependencies": {
    "chalk": "^5.2.0",
    "commander": "^12.1.0",
    "dotenv": "^16.0.3",
    "drizzle-orm": "^0.44.4",
    "esbuild-register": "^3.5.0",
    "node-fetch": "^3.3.2",
    "prompts": "^2.4.2",
    "tsx": "^4.20.3",
    "ws": "^8.18.2"
  },
  "peerDependencies": {
    "drizzle-kit": "*"
  }
}
